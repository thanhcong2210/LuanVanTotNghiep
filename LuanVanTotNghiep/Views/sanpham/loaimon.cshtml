                                @*<button type="button" title="Add to Cart" class="item_add items add-to-cart" data-id="@item.MAMON">
            <span class="glyphicon glyphicon-shopping-cart"></span>
        </button>*@
                                @*<a class="item_add items" href="/giohang/AddItem?productId=@item.MAMON&quantity=1"><span class="glyphicon glyphicon-shopping-cart"></span></a>*@
                                <div class="clearfix"> </div>
                            </div>
                        </div>

                    </div>
                }

            </div>

            @*@{
                    Html.RenderAction("_loaimonan", "sanpham");
                }*@
            <div class="col-md-3 rsidebar span_1_of_left">
                <section class="sky-form">
                    <div class="product_right">
                        <h4 class="m_2"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span>LOẠI MÓN ĂN</h4>

                        <div class="tab1" style=" text-align:left; color:white;">
                            <ul class="place" style=" text-align:left; color:white;">
                                <li>
                                    <a href="#" style=" text-align:left; color:red;
                                        display: table;
                                        margin: 0 100px;
                                        padding-bottom: 30px;
                                        border-bottom: none;
                                        border-radius: 5px;
    border: 1px solid #950a0f;
    color: #950a0f;
    font-family: 'UTM Trajan Pro Bold';
    font-size: 18px;
