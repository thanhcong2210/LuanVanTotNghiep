                {

                    var link = "/sanpham/chitiet/" + item.MAMON;
                    <a href="@link"></a>
                    <div class="product-grid">
                        <a href="@link">
                            <div class="more-product"><span></span></div>
                            <div class="product-img b-link-stripe b-animate-go  thickbox">
                                <img src="@item.HINHANH.DUONGDAN1" class="img-responsive" alt="">
                                <div class="b-wrapper">
                                    <h4 class="b-animate b-from-left  b-delay03">
                                        <button><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>Xem nhanh</button>
                                    </h4>
                                </div>
                            </div>
                        </a>
                        <div class="product-info simpleCart_shelfItem">
                            <div class="product-info-cust prt_name">
                                <h4 style="font-size: 30px; color:black">@item.TENGOI</h4>

                                <span class="item_price">@item.DONGIA.GetValueOrDefault(0).ToString("#,##0").Replace(',', '.') VND</span>
