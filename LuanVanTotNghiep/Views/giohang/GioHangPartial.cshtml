
<div id="divGioHang" class="cart box_1">
    <a href="@Url.Action("GioHang","GioHang")">
        <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true" style="color:blue"></span>
        <div class="total">
            @if (ViewBag.TongTien == null)
            {
                <span>0 VND (<span>0 món</span>)</span>
            }
            else
            {
                <span>@ViewBag.TongTien VND (<span> @ViewBag.TongSoLuong món </span>)</span>
            }
        </div>
        @{
            var session = (LuanVanTotNghiep.Common.getInfoKhachHang)Session[LuanVanTotNghiep.Common.CommonConstantClient.TaiKhoan];
        }
        @if (session == null)
        {
            <p><a href="/nguoidung/dangnhap" class="simpleCart_empty" style="font-size:15px">Đăng nhập</a> | <a href="/nguoidung/dangky" class="simpleCart_empty" style="font-size:15px">Đăng Ky</a></p>
        }
        else
        {
            <p>
                <a href="/nguoidung/thongtinchitiet/@session.ID" class="simpleCart_empty" style="font-size:15px">Xin chào:@session.Name</a> |<a href="/nguoidung/dangxuat" class="simpleCart_empty" style="font-size:15px">Đăng xuất</a>
            </p>
        }
        <div class="clearfix"> </div>
    </a>
</div>
