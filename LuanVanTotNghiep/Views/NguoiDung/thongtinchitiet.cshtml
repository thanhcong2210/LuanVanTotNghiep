@model LuanVanTotNghiep.Models.KHACHHANG
@{
    var session = (LuanVanTotNghiep.Common.getInfoKhachHang)Session[LuanVanTotNghiep.Common.CommonConstantClient.TaiKhoan];
}
@{
    ViewBag.Title = "Thông tin chi tiết | " + Model.HOTEN_KH + " ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div id="user-profile-2" class="user-profile">
    <div class="tabbable">
        <ul class="nav nav-tabs padding-18">
            <li class="active">
                <a data-toggle="tab" href="#">
                    <i class="green ace-icon fa fa-user bigger-120"></i>
                    Thông tin chi tiết
                </a>
            </li>

            <li>
                <a data-toggle="tab" href="/nguoidung/thongtingiohang/@session.ID">
                    <i class="orange ace-icon glyphicon glyphicon-shopping-cart bigger-120"></i>
                    Thông tin giỏ hàng
                </a>
            </li>

            <li>
                <a data-toggle="tab" href="/nguoidung/thongtindondatban/@session.ID">
                    <i class="blue ace-icon fas fa-table bigger-120"></i>
                    Thông tin đơn đặt bàn
                </a>
            </li>
        </ul>

        <div class="tab-content no-border padding-24">
            <div id="home" class="tab-pane in active">
                <div class="row">
                    <div class="col-xs-12 col-sm-3 center">
                        <span class="profile-picture">
                            <img class="editable img-responsive" alt=" Avatar" id="avatar2" src="http://bootdey.com/img/Content/avatar/avatar6.png">
                        </span>

                        <div class="space space-4"></div>

                        <a href="#" class="btn btn-sm btn-block btn-success">
                            <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                            <span class="bigger-110">Add as a friend</span>
                        </a>

                        <a href="#" class="btn btn-sm btn-block btn-primary">
                            <i class="ace-icon fa fa-envelope-o bigger-110"></i>
                            <span class="bigger-110">Chỉnh sửa thông tin</span>
                        </a>
                    </div><!-- /.col -->

                    <div class="col-xs-12 col-sm-9">
                        <h4 class="blue">
                            <span class="middle">@Model.HOTEN_KH</span>

                            <span class="label label-purple arrowed-in-right">
                                <i class="ace-icon fa fa-circle smaller-80 align-middle"></i>
                                online
                            </span>
                        </h4>

                        <div class="profile-user-info">
                            <div class="profile-info-row">
                                <div class="profile-info-name"> Tên đăng nhập </div>

                                <div class="profile-info-value">
                                    <span>@Model.TENDANGNHAP_KH</span>
                                </div>
                            </div>

                            <div class="profile-info-row">
                                <div class="profile-info-name"> Địa chỉ </div>

                                <div class="profile-info-value">
                                    <i class="fa fa-map-marker light-orange bigger-110"></i>
                                    <span> @Model.DIACHI_KH</span>
                                </div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> Số điện thoại </div>

                                <div class="profile-info-value">
                                    <i class="fas fa-phone bg-light-blue bigger-110"></i>
                                    <span> @Model.SDT_KH</span>
                                </div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> Email </div>

                                <div class="profile-info-value">
                                    <i class="fas fa-envelope skin-blue-light bigger-110"></i>
                                    <span> @Model.EMAIL_KH</span>
                                </div>
                            </div>


                            <div class="profile-info-row">
                                <div class="profile-info-name"> Ngày sinh </div>

                                <div class="profile-info-value">
                                    <span>@Model.NGAYSINH_KH.Value.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> Tuổi </div>

                                <div class="profile-info-value">
                                    <span>@(2018 - Model.NGAYSINH_KH.Value.Year)</span>
                                </div>
                            </div>
                            <div class="profile-info-row">
                                <div class="profile-info-name"> Giới tính </div>

                                <div class="profile-info-value">
                                    @if (Model.GIOITINH_KH == true)
                                    {
                                        <span>Nam</span>
                                    }
                                    else
                                    {
                                        <span>Nữ</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="hr hr-8 dotted"></div>

                        <div class="profile-user-info">
                            <div class="profile-info-row">
                                <div class="profile-info-name"> Website </div>

                                <div class="profile-info-value">
                                    <a href="#" target="_blank">www.alexdoe.com</a>
                                </div>
                            </div>

                            
                        </div>
                    </div><!-- /.col -->
                </div><!-- /.row -->

                <div class="space-20"></div>
        </div>
    </div>
</div>